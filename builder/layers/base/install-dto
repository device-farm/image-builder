echo "> Installing device tree overlays..."

function apply_dts() {

    local DTO_DIR=$1

    for DTSO in $(find $DTO_DIR -type f); do
        local TARGET=$(echo $DTSO | sed "s/[^/]*//")
        echo "  $TARGET"

        cat >dtso <<EOT
/dts-v1/;
/plugin/;
/ {
	fragment@0 {
		target-path = "$TARGET";
		__overlay__ {
EOT
        cat >>dtso $DTSO
        cat >>dtso <<EOT
		};
	};
};
EOT
        dtc -o dtbo dtso
        fdtoverlay -i dtb -o dtb-out dtbo
        mv dtb-out dtb
        rm dtso dtbo
    done

}

cp linux.dtb dtb

apply_dts custom-dto

mv dtb $MOUNT/boot/dtb

fdtdump $MOUNT/boot/dtb